@model StoreModel.Models.SubCategory

@{
    ViewBag.Title = "DeleteSubCategory";
    Layout = "~/Views/Shared/_LayoutWithoutMenu.cshtml";
}


<h1>Удаление подкатегории</h1>

<h3>@Html.DisplayFor(model => model.MainCategory.CategoryName)</h3>

<h3>Вы действительно хотите удалить?</h3>
<div>

    @if (Model.Products.Count > 0)
    {
        <h3>При удалении данной категории будут удалены следующие объекты:</h3>

        <div>

            <ul>
                @foreach (var item in Model.Products)
                {
                    <li>
                        @item.Title


                    </li>
                }

            </ul>


        </div>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-danger" /> 
            @Html.ActionLink("К списку", "Index",null, new { @class="btn btn-success" })
        </div>
    }
</div>
