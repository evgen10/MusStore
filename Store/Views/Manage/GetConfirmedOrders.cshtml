@model IEnumerable<StoreModel.Models.Order>
@using Store.Controllers

@{
    ViewBag.Title = "GetConfirmedOrders";
    Layout = "~/Views/Shared/_LayoutWithoutMenu.cshtml";
}


<h2>Подтвержденные заказы</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.ActionLink("Количество", "GetConfirmedOrders", "Manage", new { orderSort = OrderSorts.ByCount }, null)
        </th>
        <th>
            @Html.ActionLink("Пользователь", "GetConfirmedOrders", "Manage", new { orderSort = OrderSorts.ByUser }, null)
        </th>
        <th>
            @Html.ActionLink("Продукт", "GetConfirmedOrders", "Manage", new { orderSort = OrderSorts.ByProduct }, null)
        </th>
        <th>
            @Html.DisplayName("Цена")
        </th>      
        <th>
            @Html.ActionLink("Дата заказа", "GetConfirmedOrders", "Manage", new { orderSort = OrderSorts.ByOrderDate }, null)
        </th>
        <th>
            @Html.ActionLink("Дата подтверждения", "GetConfirmedOrders", "Manage", new { orderSort = OrderSorts.ByConfirmDate }, null)
        </th>
        <th>
            @Html.ActionLink("Стоймость", "GetConfirmedOrders", "Manage", new { orderSort = OrderSorts.ByCost }, null)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.ActionLink(item.ApplicationUser.FirstName.ToString()+" "+ item.ApplicationUser.LastName.ToString(), "UserInfo", new { id = item.ApplicationUserId });        

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Price)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfirmDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>           
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id },new { @class="btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
